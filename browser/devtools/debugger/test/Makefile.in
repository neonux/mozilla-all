_BROWSER_TEST_FILES = \
	browser_dbg_debuggerstatement.js \
	browser_dbg_listtabs.js \
	browser_dbg_tabactor-01.js \
	browser_dbg_tabactor-02.js \
	browser_dbg_contextactor-01.js \
