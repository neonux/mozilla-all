
namespace mozilla {
namespace _ipdltest {


protocol PTestSanity {

child:
    Ping(int zero, float zeroPtFive);

parent:
    Pong(int one, float zeroPtTwoFive);

both:
    UNREACHED();


state PING:
    send Ping goto PONG;

state PONG:
    recv Pong goto DEAD;

    // hmm ... maybe support this idiom natively?
state DEAD:
    send UNREACHED goto DEAD;
};


} // namespace mozilla
} // namespace _ipdltest
